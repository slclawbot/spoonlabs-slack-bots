{
  "_metadata": {
    "major_version": 1,
    "minor_version": 0
  },
  "display_information": {
    "name": "HelperBot",
    "description": "A versatile bot for task monitoring, status updates, and general assistance.",
    "background_color": "#d2b47a"
  },
  "features": {
    "bot_user": {
      "display_name": "HelperBot",
      "always_online": true,
      "description": "Provides status checks, reminders, and automated updates."
    },
    "slash_commands": [
      {
        "command": "/status",
        "url": "/slack/events",
        "description": "Get a status update on current tasks or projects.",
        "should_escape": false
      },
      {
        "command": "/whatnow",
        "url": "/slack/events",
        "description": "Suggest what to work on next.",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "channels:read",
        "groups:read",
        "im:read",
        "mpim:read",
        "reactions:write",
        "reactions:read"
      ],
      "command": [
        "chat:write"
      ]
    }
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": true,
    "pretty_name": "Helper Bot",
    "primary_color": "#d2b47a",
    "interactivity": {
      "is_enabled": true,
      "request_url": "/slack/events"
    },
    "event_subscriptions": {
      "bot_events": [
        "message.channels",
        "message.groups",
        "message.im",
        "reaction_added",
        "reaction_removed"
      ],
      "request_url_verification_enabled": true
    },
    "study_info": {
      "is_studied": false
    }
  }
}