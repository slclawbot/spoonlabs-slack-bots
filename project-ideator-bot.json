{
  "display_information": {
    "name": "ProjectIdeatorBot",
    "description": "Handles project ideation and brainstorming in #all-spoonlabs-ai. Supports polls, reactions, and DMs.",
    "background_color": "#7cd197"
  },
  "features": {
    "bot_user": {
      "display_name": "ProjectIdeatorBot",
      "always_online": true,
      "description": "Assists with idea generation, polls, and discussions."
    },
    "slash_commands": [
      {
        "command": "/ideate",
        "url": "/slack/events",
        "description": "Start a quick ideation poll or brainstorm session.",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "im:write",
        "channels:read",
        "im:read",
        "mpim:read",
        "reactions:write",
        "reactions:read",
        "polls:write",
        "polls:read"
      ],
      "command": [
        "chat:write"
      ]
    }
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": true,
    "pretty_name": "Project Ideator Bot",
    "primary_color": "#7cd197",
    "interactivity": {
      "is_enabled": true,
      "request_url": "/slack/events",
      "message_shortcut_enabled": false,
      "menu_selected_item": false,
      "app_action_support": false
    },
    "event_subscriptions": {
      "bot_events": [
        "message.channels",
        "message.im",
        "reaction_added",
        "reaction_removed"
      ],
      "request_url_verification_enabled": true
    },
    "study_info": {
      "is_studied": false,
      "terms_of_service_url": null,
      "privacy_policy_url": null
    }
  }
}