{
  "_metadata": {
    "major_version": 1,
    "minor_version": 0
  },
  "display_information": {
    "name": "IdeaBot",
    "description": "A general-purpose bot for brainstorming sessions and polling ideas.",
    "background_color": "#7cd197"
  },
  "features": {
    "bot_user": {
      "display_name": "IdeaBot",
      "always_online": true,
      "description": "Assists with idea generation, voting, and group discussions."
    },
    "slash_commands": [
      {
        "command": "/brainstorm",
        "url": "/slack/events",
        "description": "Kick off a brainstorming session or quick poll.",
        "should_escape": false
      },
      {
        "command": "/projects",
        "url": "/slack/events",
        "description": "Check what projects or tasks you're working on.",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "im:write",
        "channels:read",
        "im:read",
        "mpim:read",
        "reactions:write",
        "reactions:read",
        "polls:write",
        "polls:read"
      ],
      "command": [
        "chat:write"
      ]
    }
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": true,
    "pretty_name": "Idea Bot",
    "primary_color": "#7cd197",
    "interactivity": {
      "is_enabled": true,
      "request_url": "/slack/events"
    },
    "event_subscriptions": {
      "bot_events": [
        "message.channels",
        "message.im",
        "reaction_added",
        "reaction_removed"
      ],
      "request_url_verification_enabled": true
    },
    "study_info": {
      "is_studied": false
    }
  }
}